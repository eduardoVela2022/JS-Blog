{{! Modify And Delete Post Form }}
<h1 class="row main-container-title">{{post.title}}</h1>

<form class="primary-container column">
  {{! Title Input Field }}
  <div class="row input-field">
    <label for="modify-delete-post-title">Title:</label>
    <input id="modify-delete-post-title" type="text" value="{{post.title}}" />
  </div>

  {{! Content Input Field }}
  <div class="row input-field">
    <label for="modify-delete-post-content">Content:</label>
    <textarea id="modify-delete-post-content">{{post.content}}</textarea>
  </div>

  <div class="row btn-row">
    {{! Modify Button }}
    <button
      id="modify-delete-post-modify-btn"
      data-post-id="{{post.id}}"
      type="submit"
      class="btn-primary"
    >Modify</button>

    {{! Delete Button }}
    <button
      id="modify-delete-post-delete-btn"
      type="button"
      class="btn-secondary"
    >Delete</button>

    {{! Go Back Button }}
    <button
      id="modify-delete-post-back-btn"
      type="button"
      class="btn-secondary"
    >Go Back</button>
  </div>
</form>

<script src="/js/modifyDeletePost.js"></script>