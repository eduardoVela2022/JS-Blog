{{! List Of Posts }}
<h1 class="row main-container-title">Your Posts</h1>

{{! Create Post Button }}
<div class="row btn-row-end">
  <button id="dashboard-create-post-btn" class="btn-primary">Create a new post</button>
</div>

<div class="scroll-list">
  <ul class="column dashboard-post-list">
    {{! Post }}
    {{#each posts as |post|}}
      <li
        id="{{post.id}}"
        class="primary-container column dashboard-post-list-item"
      >
        {{! Post Title }}
        <h4>{{post.title}}</h4>

        {{! Post Owner }}
        <h5>Created on {{format_date post.createdAt}}</h5>
      </li>
    {{else}}
      {{! Empty List Message }}
      <div class="row empty-list-message">
        <p>You have not made any posts yet.</p>
      </div>
    {{/each}}
  </ul>
</div>

{{! Dashboard Script }}
<script src="/js/dashboard.js"></script>